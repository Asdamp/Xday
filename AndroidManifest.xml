<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asdamp.x_day"
    android:installLocation="auto"
    android:versionCode="22"
    android:versionName="1.5"
     >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    
    

    <application
        android:name="com.asdamp.x_day.MainApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Xday" >
        <activity
            android:name="com.asdamp.x_day.MainActivity"
            android:icon="@drawable/ic_launcher"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.asdamp.x_day.Add"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.asdamp.x_day.ADD" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.asdamp.widget.XdayWidgetProvider"
            android:enabled="@bool/honeycombOrAbove" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.asdamp.widget.ADD" />
                <action android:name="com.asdamp.widget.OPEN_APP" />
                <action android:name="com.asdamp.widget.REFRESH_WIDGET" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/info_widget" />
        </receiver>

        <service
            android:name="com.asdamp.widget.WidgetRemote"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity android:name="com.asdamp.widget.XdayWidgetSingleDateConfigure" >
            <intent-filter>
                <action android:name="com.asdamp.widget.CONFIGURE_WIDGET_SOLO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.asdamp.x_day.About"
            android:label="@string/about"
            android:parentActivityName="com.asdamp.x_day.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asdamp.x_day.MainActivity" />
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <receiver android:name="com.asdamp.widget.XdayWidgetSingleDateProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.asdamp.widget.OPEN_APP_SOLO" />
                <action android:name="com.asdamp.widget.REFRESH_WIDGET_SOLO" />
                <action android:name="com.asdamp.widget.OPEN_CONFIGURATION_SOLO" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/info_widget_data_unica" />
        </receiver>
        <receiver
            android:name="com.asdamp.notification.Notification"
            android:process=":remote" />
		<receiver 
		    android:name="com.asdamp.notification.refreshNotification">
		    <intent-filter>
                   <action android:name="android.intent.action.BOOT_COMPLETED"/>
                               <action android:name="com.asdamp.prova"/>
                   
            </intent-filter></receiver>
    
    </application>

</manifest>